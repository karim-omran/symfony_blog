{# /BlogBundle/Resources/views/Blog/Thread/view.html.twig #}

{% extends "BlogBundle:Templates:index_layout.html.twig" %}

{% block content %}

    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Threads
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                {% set count = 0 %}

                {% for thread in threadList %}

                    {% set count = count + 1 %}

                    <div class="panel panel-primary clickable-row" data-href="{{path('edit_thread', {'forumId' : forumId, 'threadId' : thread.id })}}" style="cursor: pointer;"">

                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {{thread.title}}
                            </h3>
                        </div>

                        <div class="panel-body">
                            {{thread.body}}
                        </div>

                        <div class="panel-footer">
                            <h4>
                                <span class="label label-info">
                                    Create date : {{ thread.createTime|date('Y-m-d') }}
                                </span>
                                <span class="label label-info">
                                    Created By : {{ thread.user.username }}
                                </span>
                            </h4>
                                
                        </div>

                    </div>
                {% endfor %}

                {#                {{ render(controller('BlogBundle:forum:addEdit', { 'categoryId' : categoryId})) }}#}


                </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_js %}

    <script>
        jQuery(document).ready(function ($) {
            $(".clickable-row").click(function () {
                window.document.location = $(this).data("href");
            });
        });
    </script>

{% endblock %}
